@model MVC_Eczane.Models.Entity.tbl_kategoriler
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_anaSayfa.cshtml";
}

<form class="form-group" method="post">

    <div>
        <label>Kategori Ekle</label>
        @Html.TextBoxFor(m => m.kategoriad, new {@class="form-control"})
        @Html.ValidationMessageFor(m => m.kategoriad, "", new {@style="color:red"})
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info">EKLE</button>
    </div>

</form>

