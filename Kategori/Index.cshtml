@using MVC_Eczane.Models.Entity
@model List<tbl_kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_anaSayfa.cshtml";
}

<a href="/Kategori/KategoriEkle" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
<p>

</p>


<table class="table table-bordered">

    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.kategoriid</th>
                <td>@item.kategoriad</td>
                <td><a href="/Kategori/Sil/@item.kategoriid" class="btn btn-danger">SİL</a></td>
                <td><a href="/Kategori/Guncelle/@item.kategoriid" class="btn btn-info">GÜNCELLE</a></td>
            </tr>

        }
    </tbody>

</table>