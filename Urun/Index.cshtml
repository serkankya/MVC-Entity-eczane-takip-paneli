@using MVC_Eczane.Models.Entity
@model List<tbl_urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_anaSayfa.cshtml";
}

<a href="/Urun/UrunEkle" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
<p>

</p>

<table class="table table-bordered">

    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN AD</th>
        <th>ÜRÜN ÜRETİCİSİ</th>
        <th>ÜRÜN KATEGORİSİ</th>
        <th>ÜRÜN FİYATI</th>
        <th>ÜRÜN ADEDİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.urunid</th>
                <td>@item.urunad</td>
                <td>@item.urunuretici</td>
                <td>@item.tbl_kategoriler.kategoriad</td>
                <td>@item.urunfiyat</td>
                <td>@item.urunadet</td>
                <td><a href="/Urun/Sil/@item.urunid" class="btn btn-danger">SİL</a></td>
                <td><a href="/Urun/Guncelle/@item.urunid" class="btn btn-info">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>

</table>



